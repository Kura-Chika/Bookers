<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  
  <% if @book.errors.any? %>
    <div class="error">
      <h4><%= pluralize(@book.errors.count, "error") %> prohibited this book form being saved:</h4>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Body %><br>
    <%= f.text_area :body %>
  </div>
  <div><%= f.submit 'Update Book' %></div>

  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", "/books" %>

<% end %>