<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>  
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book, method: :delete, data: { confirm: "Are you sure?" }, authenticity_token: :form_authenticity_token %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>

<%= form_with model: @book do |f| %>

  <% if @book.errors.any? %>
    <div class="error">
      <h4><%= pluralize(@book.errors.count, "error") %> prohibited this book form being saved:</h4>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :Body %><br>
    <%= f.text_area :body %>
  </div>

  <div><%= f.submit 'Create Book' %></div>
<% end %>